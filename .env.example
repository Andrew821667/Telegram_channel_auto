# Application Settings
APP_NAME=AI-News Aggregator for LegalTech
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# PostgreSQL Database
POSTGRES_DB=legal_ai_news
POSTGRES_USER=legal_user
POSTGRES_PASSWORD=changeme_strong_password
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
DATABASE_URL=postgresql+asyncpg://legal_user:changeme_strong_password@postgres:5432/legal_ai_news

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=changeme_redis_password
REDIS_DB=0
REDIS_URL=redis://:changeme_redis_password@redis:6379/0

# Celery
CELERY_BROKER_URL=redis://:changeme_redis_password@redis:6379/0
CELERY_RESULT_BACKEND=redis://:changeme_redis_password@redis:6379/1
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=["json"]
CELERY_TIMEZONE=Europe/Moscow
CELERY_ENABLE_UTC=true

# OpenAI API
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL_ANALYSIS=gpt-4o-mini
OPENAI_MODEL_CRITICAL=gpt-4o
OPENAI_TTS_MODEL=tts-1
OPENAI_TTS_VOICE=nova
OPENAI_MAX_TOKENS=3500
OPENAI_TEMPERATURE=0.7

# Perplexity AI API
PERPLEXITY_API_KEY=pplx-your-perplexity-api-key-here
PERPLEXITY_MODEL=sonar
PERPLEXITY_MAX_TOKENS=3500
PERPLEXITY_TEMPERATURE=0.7

# DeepSeek AI API
DEEPSEEK_API_KEY=sk-your-deepseek-api-key-here
DEEPSEEK_MODEL=deepseek-chat
DEEPSEEK_MAX_TOKENS=3500
DEEPSEEK_TEMPERATURE=0.7
DEEPSEEK_BASE_URL=https://api.deepseek.com

# LLM Provider Selection (openai, perplexity, or deepseek)
DEFAULT_LLM_PROVIDER=deepseek

# Qdrant Vector Database
QDRANT_HOST=qdrant
QDRANT_PORT=6333
QDRANT_ENABLED=true

# Telegram Bot (для модерации и публикации)
TELEGRAM_BOT_TOKEN=your_bot_token_from_botfather
TELEGRAM_ADMIN_ID=your_telegram_user_id
TELEGRAM_CHANNEL_ID=@your_channel_username_or_id
TELEGRAM_CHANNEL_ID_NUMERIC=-1001234567890

# Reader Bot (для читателей канала - персонализация)
READER_BOT_TOKEN=your_reader_bot_token_from_botfather

# Telegram Client API (для сбора новостей из каналов)
TELEGRAM_API_ID=34617695
TELEGRAM_API_HASH=e95e6e190f5efcff98001a490acea1c1
TELEGRAM_SESSION_NAME=telegram_bot
# Проверенные Telegram каналы (через запятую, с @ или без):
# AI/Tech: @ai_newz, @vc_news, @habr_com
# Бизнес/Tech: @rb_tech, @rbc_news, @tass_science
# ML/AI: @neural_networks_ru, @machine_learning_ru
TELEGRAM_CHANNELS=@ai_newz,@rb_tech,@vc_news,@habr_com,@tass_science,@rbc_news
TELEGRAM_FETCH_LIMIT=50
TELEGRAM_FETCH_ENABLED=true

# News Fetcher Settings
FETCHER_ENABLED=true
FETCHER_INTERVAL_HOURS=24
FETCHER_MAX_ARTICLES_PER_SOURCE=200
FETCHER_REQUEST_TIMEOUT=30
FETCHER_MAX_RETRIES=3
FETCHER_RETRY_DELAY=2

# Google News RSS Settings
GOOGLE_NEWS_RSS_URL=https://news.google.com/rss/search
GOOGLE_NEWS_QUERY_RU=искусственный интеллект AND (право OR суд OR юрист)
GOOGLE_NEWS_QUERY_EN=artificial intelligence AND (law OR court OR lawyer)
GOOGLE_NEWS_LANG_RU=ru
GOOGLE_NEWS_LANG_EN=en
GOOGLE_NEWS_REGION=RU

# RSS Sources (comma-separated URLs)
RSS_SOURCES=https://example.com/rss,https://another-source.com/feed

# Cleaner/Filter Settings
CLEANER_MIN_CONTENT_LENGTH=300
CLEANER_SIMILARITY_THRESHOLD=0.85
CLEANER_ENABLED_LANGUAGES=ru,en

# ML Classification
ML_CLASSIFIER_MODEL=facebook/bart-large-mnli
ML_CONFIDENCE_THRESHOLD=0.6
ML_LABELS=legal AI news,court technology,law automation,irrelevant news

# AI Core Settings
AI_RANKING_ENABLED=true
AI_TOP_ARTICLES_COUNT=3
AI_POST_MIN_LENGTH=150
AI_POST_MAX_LENGTH=250
AI_LEGAL_CONTEXT_ENABLED=true
AI_LEGAL_CONTEXT_CONFIDENCE_MIN=0.7

# Media Factory Settings
MEDIA_TEMPLATES_DIR=/app/templates
MEDIA_OUTPUT_DIR=/app/media
MEDIA_TEMPLATE_IMAGE_PATH=/app/templates/base_template.jpg
MEDIA_IMAGE_WIDTH=1200
MEDIA_IMAGE_HEIGHT=630
MEDIA_FONT_SIZE_TITLE=48
MEDIA_FONT_SIZE_DATE=24
MEDIA_WATERMARK_ENABLED=true

# DALL-E Settings (Optional)
DALLE_ENABLED=false
DALLE_MODEL=dall-e-3
DALLE_SIZE=1024x1024
DALLE_QUALITY=standard

# Publisher Settings
PUBLISHER_AUTO_PUBLISH=false
PUBLISHER_REQUIRE_APPROVAL=true
PUBLISHER_MAX_POSTS_PER_DAY=3

# Analytics Settings
ANALYTICS_ENABLED=true
ANALYTICS_COLLECTION_INTERVAL_HOURS=6
ANALYTICS_RETENTION_DAYS=90

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_SECOND=1
RATE_LIMIT_OPENAI_RPM=60

# Security
SECRET_KEY=your-secret-key-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ORIGINS=http://localhost:8000

# Monitoring
HEALTHCHECK_ENABLED=true
HEALTHCHECK_INTERVAL=30

# Timezone
TZ=Europe/Moscow
